@model CRMLeadObjects.DTO.IWSPortal.SettingsCustomer.ProfileCustomer
@using Resources = CRMLeadObjects.Resources;

<div class="form-group row">
  <label for="idCustomer" class="col-sm-2 col-form-label">@Resources.Settings.Settings.Id</label>
  <div class="col-sm-4">
    <input type="text" class="form-control" disabled id="idCustomer" value="@Model.CustomerId">
  </div>
  <label for="customerName" class="col-sm-2 col-form-label">@Resources.Settings.Settings.Name</label>
  <div class="col-sm-4">
    <input type="text" disabled value="@Model.Description" class="form-control" id="customerName">
  </div>
</div>
<div class="form-group row">
  <label for="affiliate" class="col-sm-2 col-form-label">@Resources.Settings.Settings.Affiliate</label>
  <div class="col-sm-4">
    <input type="text" disabled value="@Model.Afiliate" class="form-control" id="affiliate">
  </div>
  <label for="countryName" class="col-sm-2 col-form-label">@Resources.Settings.Settings.Country</label>
  <div class="col-sm-4">
    <input type="text" disabled value="@Model.Alias" class="form-control" id="countryName">
  </div>
</div>
<div class="form-group row">
  <label for="affiliate" class="col-sm-2 col-form-label">@Resources.Settings.Settings.Status</label>
  <div class="col-sm-4 disable-events">

    <div class="form-check form-check-inline">
      <label class="content-input">
        <input class="form-check-input" disabled @(Model.Active ? "Checked" : string.Empty) type="radio" name="inlineRadioOptions" value="option1">
        @Resources.Settings.Settings.Active
        <i></i>
      </label>
    </div>
    <div class="form-check form-check-inline">
      <label class="content-input">
        <input class="form-check-input" type="radio" disabled @(!Model.Active ? "Checked" : string.Empty) name="inlineRadioOptions" value="option2">
        @Resources.Settings.Settings.Inactive
        <i></i>
      </label>
    </div>
  </div>
  <label for="type" class="col-sm-2 col-form-label">@Resources.Settings.Settings.Type</label>
  <div class="col-sm-4">
    <input type="text" disabled value="@Model.CustomerType" class="form-control" id="type">
  </div>
</div>
<hr />
<div class="form-group row">
  <label for="publicKey" class="col-sm-2 col-form-label">@Resources.Settings.Settings.API_KEY</label>
  <div class="col-sm-4">
    <div class="input-group">

      <input type="text" disabled class="form-control py-2" value="@Model.ApiKey.ToString()" id="publicKey">
      <span class="input-group-append">
        <button id="btnPublicKey" class="btn btn-outline-secondary" type="button">
          <i class="icon-ws-ico-min-change-password"></i>
        </button>
      </span>
    </div>
    <p>@Resources.Settings.Settings.PublicKey</p>

  </div>
  <label for="privateKey" class="col-sm-2 col-form-label">Access key</label>
  <div class="col-sm-4">
    <div class="input-group">
      <input type="text" disabled class="form-control py-2" value="@Model.AccessKey.ToString()" id="privateKey">
      <span class="input-group-append">
        <button id="btnPrivateKey" class="btn btn-outline-secondary" type="button">
          <i class="icon-ws-ico-min-change-password"></i>
        </button>
      </span>
    </div>
    <p>@Resources.Settings.Settings.PrivateKey</p>
  </div>
</div>
